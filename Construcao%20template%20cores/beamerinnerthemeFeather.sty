{

%----------------------------------------------------------------------------------------------------------------------------------

% title page
%% definitions for fonts of the different elements
                
               
                \setbeamerfont{institute}{family=\bookman, size = \tiny}
                \setbeamerfont{title}{family=\bookman, size = \verylarge} 
                \setbeamerfont{subtitle}{family=\rmfamily, size = \large}
                \setbeamerfont{author}{family=\bookman, size = \normalsize}
                \setbeamerfont{date}{family=\rmfamily, size = \footnotesize}
               
        \setbeamertemplate{title page}{

%% setting the above definitions

        \begin{minipage}[c][\textheight][c]{\textwidth}
                  \centering

                %  {\usebeamerfont{institute}\textcolor{white}{\insertinstitute}}\vspace*{30pt}
                 {\usebeamerfont{institute}\textcolor{white}{\insertinstitute}}\vspace*{30pt}

                 {\usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle}\vspace*{10pt}

                 {\usebeamerfont{subtitle}\textcolor{white}{\insertsubtitle}}\vspace*{30pt}

                 {\usebeamerfont{author}\usebeamercolor{gray}{\insertauthor}}\vspace*{30pt}

                 {\usebeamerfont{date}\textcolor{white}{\insertdate}}\vspace*{\baselineskip}

         \end{minipage}
        }
  
%----------------------------------------------------------------------------------------------------------------------------------
  
% final page

                  \defbeamertemplate{final page}{text}[1]
   {
         \begin{minipage}[c][\textheight][c]{\textwidth}
                  \centering
                  #1
         \end{minipage}
   }
                  \newcommand{\finalpage}[1]
   {
                  \setbeamertemplate{final page}[text]{#1}
                  \usebeamertemplate{final page}
   }

